<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fortnite.Info.View.StorePage"
             Title="Current Store">
    
    <ContentPage.Content>

        <ListView x:Name="ItemsStore" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>

                        <StackLayout Orientation="Vertical" BackgroundColor="Transparent" Padding="10" >

                            <Label Text="{Binding name}" FontSize="30" HorizontalOptions="StartAndExpand" FontAttributes="Bold" />
                            <Label Text="{Binding description}" FontSize="20" HorizontalOptions="StartAndExpand" />
                            <Image Source="{Binding url}" />
                            <Label Text="{Binding price}" FontSize="18" Padding="15" HorizontalOptions="EndAndExpand" />

                        </StackLayout>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </ContentPage.Content>

</ContentPage>